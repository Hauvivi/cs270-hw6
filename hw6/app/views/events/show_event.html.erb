<h2><%= @event.name %></h2>
<p><%= @event.description %></p>
<p><%= @event.start_date %></p>
<p><%= @event.end_date %></p>

<table>
    <tr>
        <th>Location</th>
        <th>Description</th>
    </tr>
    
    <% @event.location.each do |loc| %>
        <tr>
            <td><%= loc.name %></td>
            <td><%= loc.description %></td>
        </tr>
        
        <% end %>
</table>

<table>
    <tr>
        <th>Name</th>
        <th>Email</th>
    </tr>
    
    <% @event.participants.each do |u| %>
        <tr>
            <td><%= u.name %></td>
            <td><%= u.email %></td>
        </tr>
        
        <% end %>
</table>